'use client'
import { useEffect, useState } from 'react'
import { createClient } from '@/utils/supabase/client'
import { ResponsiveContainer, AreaChart, Area, XAxis, CartesianGrid, Tooltip } from 'recharts'

export default function Home() {
  // --- GESTI√ìN DE PESTA√ëAS Y DATOS ---
  const [activeTab, setActiveTab] = useState('inicio')
  const [animales, setAnimales] = useState<any[]>([])
  const [finanzas, setFinanzas] = useState<any[]>([])
  const [registros, setRegistros] = useState<any[]>([])
  const [vacunasHistorial, setVacunasHistorial] = useState<any[]>([])
  const [loading, setLoading] = useState(true)
  const supabase = createClient()

  // --- VARIABLES DE CONFIGURACI√ìN Y ESTADO ---
  const [tasaBCV, setTasaBCV] = useState(311.88)
  const [displayTasa, setDisplayTasa] = useState('Cargando...') 
  const [hayInternet, setHayInternet] = useState(false)
  const [searchTerm, setSearchTerm] = useState('')
  const [verArbolId, setVerArbolId] = useState<string | null>(null)
  const [verEnDolares, setVerEnDolares] = useState(false)

  // --- FORMULARIOS (Con Sexo agregado) ---
  const [animalForm, setAnimalForm] = useState({ 
    nombre: '', 
    arete: '', 
    nacimiento: '', 
    sexo: 'Hembra', // Valor por defecto
    padre_id: '', 
    madre_id: '' 
  })
  
  const [prodForm, setProdForm] = useState({ animal_id: '', litros: '', peso: '' })
  const [finForm, setFinForm] = useState({ tipo: 'gasto', categoria: '', monto: '', descripcion: '', moneda: 'VES' })
  const [vacForm, setVacForm] = useState({ animal_id: '', nombre: '', fecha: '', proxima: '' })

  // --- 1. CONEXI√ìN INTELIGENTE A LA API DEL BCV ---
  async function obtenerTasaBCV() {
    try {
      const res = await fetch('https://ve.dolarapi.com/v1/dolares/oficial', { cache: 'no-store' })
      if (!res.ok) throw new Error('Error API')
      
      const data = await res.json()
      if (data && data.promedio) {
        setTasaBCV(data.promedio)
        setDisplayTasa(data.promedio.toFixed(2))
        setHayInternet(true)
        // Guardamos en memoria por si se va el internet ma√±ana
        localStorage.setItem('tasaGuardada', data.promedio.toString())
      }
    } catch (e) {
      setHayInternet(false)
      // Si falla, buscamos en la memoria del tel√©fono
      const guardado = localStorage.getItem('tasaGuardada')
      if (guardado) {
        setTasaBCV(parseFloat(guardado))
        setDisplayTasa(`${parseFloat(guardado).toFixed(2)} (Offline)`)
      } else {
        setTasaBCV(311.88) 
        setDisplayTasa('311.88 (Base)')
      }
    }
  }

  // --- 2. CARGA DE DATOS DE SUPABASE ---
  async function cargarTodo() {
    setLoading(true)
    const { data: ani } = await supabase.from('animales').select('*').order('nombre')
    const { data: fin } = await supabase.from('contabilidad').select('*').order('fecha', { ascending: false })
    const { data: reg } = await supabase.from('registros_diarios').select('*, animales(nombre)').order('fecha', { ascending: false }).limit(30)
    const { data: vac } = await supabase.from('vacunas').select('*, animales(nombre)').order('fecha_aplicacion', { ascending: false })
    
    if (ani) setAnimales(ani)
    if (fin) setFinanzas(fin)
    if (reg) setRegistros(reg)
    if (vac) setVacunasHistorial(vac)
    setLoading(false)
  }

  useEffect(() => { 
    cargarTodo()
    obtenerTasaBCV() 
  }, [])

  // --- 3. ACCIONES DE GUARDADO ---
  const guardarAnimal = async (e: any) => {
    e.preventDefault()
    const payload = { 
      nombre: animalForm.nombre,
      numero_arete: animalForm.arete,
      fecha_nacimiento: animalForm.nacimiento,
      sexo: animalForm.sexo, // Guardamos el sexo
      padre_id: animalForm.padre_id === "" ? null : animalForm.padre_id, 
      madre_id: animalForm.madre_id === "" ? null : animalForm.madre_id 
    }
    
    const { error } = await supabase.from('animales').insert([payload])
    if (!error) { 
      setAnimalForm({ nombre: '', arete: '', nacimiento: '', sexo: 'Hembra', padre_id: '', madre_id: '' })
      cargarTodo()
      alert("‚úÖ B√∫falo guardado") 
    } else { 
      alert("Error: " + error.message) 
    }
  }

  const guardarProduccion = async (e: any) => {
    e.preventDefault()
    const { error } = await supabase.from('registros_diarios').insert([{ 
      animal_id: prodForm.animal_id, 
      litros_leche: parseFloat(prodForm.litros) || 0, 
      peso_kg: parseFloat(prodForm.peso) || null 
    }])
    if (!error) { setProdForm({ animal_id: '', litros: '', peso: '' }); cargarTodo(); alert("‚úÖ Medici√≥n guardada") }
  }

  const guardarFinanza = async (e: any) => {
    e.preventDefault()
    // Si es USD, convertimos a VES antes de guardar
    const montoFinal = finForm.moneda === 'USD' ? parseFloat(finForm.monto) * tasaBCV : parseFloat(finForm.monto)
    const { error } = await supabase.from('contabilidad').insert([{ 
      tipo: finForm.tipo, 
      categoria: finForm.categoria, 
      monto: montoFinal, 
      descripcion: `${finForm.descripcion} [Orig: ${finForm.moneda} ${finForm.monto}]` 
    }])
    if (!error) { setFinForm({ tipo: 'gasto', categoria: '', monto: '', descripcion: '', moneda: 'VES' }); cargarTodo(); alert("‚úÖ Registro guardado") }
  }

  const guardarVacuna = async (e: any) => {
    e.preventDefault()
    const { error } = await supabase.from('vacunas').insert([{ 
      animal_id: vacForm.animal_id, 
      nombre_vacuna: vacForm.nombre, 
      fecha_aplicacion: vacForm.fecha, 
      proxima_dosis: vacForm.proxima 
    }])
    if (!error) { setVacForm({ animal_id: '', nombre: '', fecha: '', proxima: '' }); cargarTodo(); alert("‚úÖ Vacuna guardada") }
  }

  // --- 4. OTRAS FUNCIONES (Telegram, Borrar, C√°lculos) ---
  const eliminarItem = async (tabla: string, id: string) => {
    if (confirm("‚ö†Ô∏è ¬øEst√°s seguro de eliminar este registro permanentemente?")) {
      const { error } = await supabase.from(tabla).delete().eq('id', id)
      if (!error) cargarTodo()
    }
  }

  const enviarTelegram = (v: any) => {
    const t = `üö® DataVE Alerta üêÉ\n\nAnimal: ${v.animales?.nombre}\nVacuna: ${v.nombre_vacuna}\nFecha: ${new Date(v.proxima_dosis).toLocaleDateString()}`
    window.open(`https://t.me/share/url?url=${encodeURIComponent(t)}`, '_blank')
  }

  // C√°lculos de Poblaci√≥n
  const totalMachos = animales.filter(a => a.sexo === 'Macho').length
  const totalHembras = animales.filter(a => a.sexo === 'Hembra').length

  // Filtros y Balances
  const animalesFiltrados = animales.filter(a => a.nombre.toLowerCase().includes(searchTerm.toLowerCase()) || a.numero_arete.toLowerCase().includes(searchTerm.toLowerCase()))
  
  const totalIngresos = finanzas.filter(f => f.tipo === 'ingreso').reduce((acc, curr) => acc + curr.monto, 0)
  const totalGastos = finanzas.filter(f => f.tipo === 'gasto').reduce((acc, curr) => acc + curr.monto, 0)
  const balanceNeto = totalIngresos - totalGastos
  
  // L√≥gica del Switch de Moneda
  const balanceMostrar = verEnDolares ? (balanceNeto / tasaBCV) : balanceNeto
  const simbolo = verEnDolares ? '$' : 'Bs'

  const datosGrafica = registros.slice().reverse().map(r => ({ fecha: new Date(r.fecha).toLocaleDateString('es-VE', { day: '2-digit', month: 'short' }), litros: r.litros_leche }))
  const obtenerFechaDestete = (f: string) => { const d = new Date(f); d.setDate(d.getDate() + 270); return d.toLocaleDateString('es-VE', { day: '2-digit', month: 'short' }) }

  // Estilos visuales
  const inputStyle = "w-full p-4 rounded-2xl bg-white border border-slate-200 text-slate-800 font-bold placeholder:text-slate-400 focus:border-green-500 focus:ring-4 focus:ring-green-100 outline-none transition-all shadow-sm"
  const cardStyle = "bg-white p-6 rounded-[2.5rem] border border-slate-100 shadow-[0_8px_30px_rgb(0,0,0,0.04)]"

  return (
    <main className="min-h-screen bg-[#F8F9FA] pb-32 text-slate-900 font-sans selection:bg-green-200">
      
      {/* HEADER PRINCIPAL */}
      <header className="bg-[#1B4332] text-white pt-10 pb-16 px-6 sticky top-0 z-20 shadow-2xl rounded-b-[3rem]">
        <div className="max-w-md mx-auto flex justify-between items-end">
          <div>
            <p className="text-green-400 text-[10px] font-black uppercase tracking-[0.3em] mb-1 opacity-90">Sistema DataVE</p>
            <h1 className="text-4xl font-black tracking-tighter leading-none">B√öFALOS</h1>
          </div>
          <div className="bg-white/10 backdrop-blur-md p-3 rounded-2xl border border-white/10 text-center min-w-[90px]">
             <p className={`text-[8px] font-black uppercase tracking-widest mb-1 ${hayInternet ? 'text-green-300' : 'text-orange-300'}`}>
               {hayInternet ? 'BCV ‚Ä¢ ONLINE' : 'OFFLINE'}
             </p>
             <p className="text-xl font-bold leading-none tracking-tight">Bs {displayTasa}</p>
          </div>
        </div>
      </header>

      <div className="max-w-md mx-auto p-4 -mt-12 space-y-6 relative z-10">
        
        {/* PESTA√ëA 1: INICIO (DASHBOARD) */}
        {activeTab === 'inicio' && (
          <div className="space-y-6 animate-in fade-in slide-in-from-bottom-4 duration-700">
            
            {/* NUEVO: Tarjetas de Conteo Machos/Hembras */}
            <div className="grid grid-cols-2 gap-3">
               <div className="bg-white p-4 rounded-[2rem] border border-blue-100 shadow-sm flex items-center justify-between">
                  <div>
                    <p className="text-[9px] font-black text-blue-400 uppercase tracking-wider">Machos</p>
                    <p className="text-2xl font-black text-slate-800">{totalMachos}</p>
                  </div>
                  <span className="text-3xl">üêÇ</span>
               </div>
               <div className="bg-white p-4 rounded-[2rem] border border-pink-100 shadow-sm flex items-center justify-between">
                  <div>
                    <p className="text-[9px] font-black text-pink-400 uppercase tracking-wider">Hembras</p>
                    <p className="text-2xl font-black text-slate-800">{totalHembras}</p>
                  </div>
                  <span className="text-3xl">üêÑ</span>
               </div>
            </div>

            {/* Tarjeta de Balance */}
            <div className={cardStyle}>
              <div className="flex justify-between items-center mb-4">
                <p className="text-[10px] font-black text-slate-400 uppercase tracking-widest">Balance Neto</p>
                <button onClick={() => setVerEnDolares(!verEnDolares)} className={`px-4 py-1.5 rounded-full text-[10px] font-black transition-all active:scale-95 ${verEnDolares ? 'bg-emerald-100 text-emerald-700' : 'bg-slate-100 text-slate-600'}`}>
                  {verEnDolares ? 'VER EN BS ‚Ü∫' : 'VER EN USD ‚áÑ'}
                </button>
              </div>
              
              <h3 className={`text-5xl font-black mb-2 tracking-tight transition-colors duration-300 ${verEnDolares ? 'text-emerald-600' : 'text-slate-900'}`}>
                {simbolo} {balanceMostrar.toLocaleString('es-VE', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}
              </h3>
              
              <div className="h-44 w-full mt-6">
                <p className="text-[10px] font-black text-slate-300 uppercase mb-2">Curva de Producci√≥n</p>
                <ResponsiveContainer width="100%" height="100%">
                  <AreaChart data={datosGrafica}>
                    <defs><linearGradient id="colorL" x1="0" y1="0" x2="0" y2="1"><stop offset="5%" stopColor="#10B981" stopOpacity={0.3}/><stop offset="95%" stopColor="#10B981" stopOpacity={0}/></linearGradient></defs>
                    <CartesianGrid strokeDasharray="3 3" vertical={false} stroke="#F1F5F9" />
                    <XAxis dataKey="fecha" axisLine={false} tickLine={false} tick={{fontSize: 10, fill:'#94A3B8', fontWeight:'bold'}} />
                    <Tooltip contentStyle={{borderRadius: '16px', border: 'none', boxShadow:'0 10px 15px -3px rgb(0 0 0 / 0.1)'}} />
                    <Area type="monotone" dataKey="litros" stroke="#10B981" strokeWidth={4} fill="url(#colorL)" />
                  </AreaChart>
                </ResponsiveContainer>
              </div>
            </div>
            
            <div className="grid grid-cols-2 gap-4">
              <div className="bg-white p-5 rounded-[2.2rem] shadow-sm border border-emerald-100 text-center">
                <p className="text-[10px] font-black text-emerald-600 uppercase">Ingresos</p>
                <p className="text-lg font-black text-slate-800">{simbolo} {(verEnDolares ? totalIngresos/tasaBCV : totalIngresos).toLocaleString('es-VE', { maximumFractionDigits: 0 })}</p>
              </div>
              <div className="bg-white p-5 rounded-[2.2rem] shadow-sm border border-rose-100 text-center">
                <p className="text-[10px] font-black text-rose-600 uppercase">Gastos</p>
                <p className="text-lg font-black text-slate-800">{simbolo} {(verEnDolares ? totalGastos/tasaBCV : totalGastos).toLocaleString('es-VE', { maximumFractionDigits: 0 })}</p>
              </div>
            </div>
          </div>
        )}

        {/* PESTA√ëA 2: ANIMALES (REGISTRO) */}
        {activeTab === 'animales' && (
          <div className="space-y-6 animate-in slide-in-from-right-4 duration-500">
            <section className={cardStyle}>
              <h3 className="text-[10px] font-black mb-6 text-green-800 uppercase tracking-widest flex items-center gap-2">
                <span className="bg-green-100 p-1.5 rounded-lg">üêÉ</span> Nuevo Registro
              </h3>
              <form onSubmit={guardarAnimal} className="space-y-4">
                <input placeholder="Nombre del B√∫falo" className={inputStyle} value={animalForm.nombre} onChange={e => setAnimalForm({...animalForm, nombre: e.target.value})} required />
                <div className="grid grid-cols-2 gap-4">
                  <input placeholder="Arete / ID" className={inputStyle} value={animalForm.arete} onChange={e => setAnimalForm({...animalForm, arete: e.target.value})} required />
                  <input type="date" className={inputStyle} value={animalForm.nacimiento} onChange={e => setAnimalForm({...animalForm, nacimiento: e.target.value})} required />
                </div>
                
                {/* SELECTOR DE SEXO (NUEVO) */}
                <div className="flex gap-2 p-1 bg-slate-100 rounded-2xl">
                   <button type="button" onClick={() => setAnimalForm({...animalForm, sexo: 'Hembra'})} className={`flex-1 p-3 rounded-xl font-bold text-[10px] transition-all shadow-sm ${animalForm.sexo === 'Hembra' ? 'bg-pink-500 text-white' : 'text-slate-400 hover:bg-white'}`}>HEMBRA</button>
                   <button type="button" onClick={() => setAnimalForm({...animalForm, sexo: 'Macho'})} className={`flex-1 p-3 rounded-xl font-bold text-[10px] transition-all shadow-sm ${animalForm.sexo === 'Macho' ? 'bg-blue-600 text-white' : 'text-slate-400 hover:bg-white'}`}>MACHO</button>
                </div>

                <div className="grid grid-cols-2 gap-4">
                  <select className={inputStyle} value={animalForm.padre_id} onChange={e => setAnimalForm({...animalForm, padre_id: e.target.value})}><option value="">Padre?</option>{animales.map(a => <option key={a.id} value={a.id}>{a.nombre}</option>)}</select>
                  <select className={inputStyle} value={animalForm.madre_id} onChange={e => setAnimalForm({...animalForm, madre_id: e.target.value})}><option value="">Madre?</option>{animales.map(a => <option key={a.id} value={a.id}>{a.nombre}</option>)}</select>
                </div>
                {/* BOT√ìN RENOMBRADO A "GUARDAR" */}
                <button type="submit" className="w-full bg-[#1B4332] text-white p-4 rounded-2xl font-bold uppercase text-xs shadow-lg shadow-green-900/20 active:scale-95 transition-all">Guardar</button>
              </form>
            </section>

            {/* BUSCADOR */}
            <div className="relative">
              <span className="absolute left-4 top-4 text-slate-400">üîç</span>
              <input placeholder="Buscar por nombre o arete..." className={`${inputStyle} pl-12`} value={searchTerm} onChange={e => setSearchTerm(e.target.value)} />
            </div>

            {/* LISTA DE ANIMALES */}
            <div className="space-y-3">
              {animalesFiltrados.map(a => (
                <div key={a.id} className="bg-white p-5 rounded-[2rem] shadow-sm border border-slate-100 hover:shadow-md transition-all">
                  <div className="flex justify-between items-start mb-3">
                    <div>
                      <div className="flex items-center gap-2">
                        <h4 className="font-black text-xl text-slate-900">{a.nombre}</h4>
                        <span className={`text-[9px] font-black px-2 py-0.5 rounded-md ${a.sexo === 'Macho' ? 'bg-blue-50 text-blue-600' : 'bg-pink-50 text-pink-500'}`}>
                          {a.sexo === 'Macho' ? 'M' : 'H'}
                        </span>
                      </div>
                      <p className="text-[10px] font-bold text-slate-500 uppercase mt-1">ID: {a.numero_arete}</p>
                    </div>
                    <button onClick={() => setVerArbolId(verArbolId === a.id ? null : a.id)} className="bg-green-50 text-green-700 px-3 py-1.5 rounded-xl text-[10px] font-black uppercase active:scale-90 transition-transform">üå≥ √Årbol</button>
                  </div>
                  
                  {verArbolId === a.id && (
                    <div className="bg-[#F8F9FA] p-4 rounded-2xl mb-4 border border-dashed border-slate-300 animate-in zoom-in-95 duration-300">
                      <p className="text-[9px] font-black text-slate-400 uppercase mb-3">Genealog√≠a Directa</p>
                      <div className="space-y-2">
                        <div className="flex justify-between text-xs"><span className="text-slate-400 font-bold">Padre</span><span className="font-bold text-slate-800">{animales.find(p => p.id === a.padre_id)?.nombre || '---'}</span></div>
                        <div className="flex justify-between text-xs"><span className="text-slate-400 font-bold">Madre</span><span className="font-bold text-slate-800">{animales.find(m => m.id === a.madre_id)?.nombre || '---'}</span></div>
                      </div>
                    </div>
                  )}
                  <div className="flex justify-between items-center border-t border-slate-50 pt-3">
                    <p className="text-[9px] font-bold text-slate-400">Destete: <span className="text-slate-600">{obtenerFechaDestete(a.fecha_nacimiento)}</span></p>
                    <button onClick={() => eliminarItem('animales', a.id)} className="text-rose-500 font-black text-[10px] uppercase tracking-wider px-2 py-1 hover:bg-rose-50 rounded-lg transition-colors">Eliminar</button>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        {/* PESTA√ëA 3: PRODUCCI√ìN */}
        {activeTab === 'produccion' && (
          <div className="space-y-6 animate-in slide-in-from-right-4 duration-500">
            <section className={cardStyle}>
              <h2 className="text-[10px] font-black mb-6 text-blue-700 uppercase tracking-widest text-center flex justify-center gap-2">
                <span className="bg-blue-50 p-1 rounded-lg">ü•õ</span> Control Diario
              </h2>
              <form onSubmit={guardarProduccion} className="space-y-4">
                <select className={inputStyle} value={prodForm.animal_id} onChange={e => setProdForm({...prodForm, animal_id: e.target.value})} required><option value="">Seleccionar Animal...</option>{animales.map(a => <option key={a.id} value={a.id}>{a.nombre}</option>)}</select>
                <div className="grid grid-cols-2 gap-4">
                  <div><label className="text-[9px] font-black text-blue-400 ml-2 uppercase">Litros</label><input placeholder="0.0" type="number" step="0.1" className={inputStyle} value={prodForm.litros} onChange={e => setProdForm({...prodForm, litros: e.target.value})} /></div>
                  <div><label className="text-[9px] font-black text-slate-400 ml-2 uppercase">Kilos</label><input placeholder="0.0" type="number" step="0.1" className={inputStyle} value={prodForm.peso} onChange={e => setProdForm({...prodForm, peso: e.target.value})} /></div>
                </div>
                <button className="w-full bg-blue-600 text-white p-4 rounded-2xl font-bold uppercase text-xs shadow-lg shadow-blue-900/20 active:scale-95 transition-all">Registrar Medici√≥n</button>
              </form>
            </section>
            <div className="space-y-3">
              {registros.map(r => (
                <div key={r.id} className="bg-white p-5 rounded-[2rem] shadow-sm border border-slate-100 flex justify-between items-center">
                  <div>
                    <p className="text-[9px] font-black text-slate-400 uppercase tracking-wider">{new Date(r.fecha).toLocaleDateString()} ‚Ä¢ {r.animales?.nombre}</p>
                    <div className="flex gap-3 mt-1.5">
                      {r.litros_leche > 0 && <span className="bg-blue-50 text-blue-700 px-3 py-1 rounded-lg text-xs font-black">{r.litros_leche} L</span>}
                      {r.peso_kg > 0 && <span className="bg-slate-100 text-slate-700 px-3 py-1 rounded-lg text-xs font-black">{r.peso_kg} Kg</span>}
                    </div>
                  </div>
                  <button onClick={() => eliminarItem('registros_diarios', r.id)} className="w-8 h-8 flex items-center justify-center text-slate-300 hover:text-rose-500 transition-colors">‚úï</button>
                </div>
              ))}
            </div>
          </div>
        )}

        {/* PESTA√ëA 4: SALUD */}
        {activeTab === 'salud' && (
          <div className="space-y-6 animate-in slide-in-from-right-4 duration-500">
            <section className={cardStyle}>
              <h2 className="text-[10px] font-black mb-6 text-purple-700 uppercase tracking-widest text-center flex justify-center gap-2">
                <span className="bg-purple-50 p-1 rounded-lg">üíâ</span> Plan Sanitario
              </h2>
              <form onSubmit={guardarVacuna} className="space-y-4">
                <select className={inputStyle} value={vacForm.animal_id} onChange={e => setVacForm({...vacForm, animal_id: e.target.value})} required><option value="">Paciente...</option>{animales.map(a => <option key={a.id} value={a.id}>{a.nombre}</option>)}</select>
                <input placeholder="Vacuna / Medicina" className={inputStyle} value={vacForm.nombre} onChange={e => setVacForm({...vacForm, nombre: e.target.value})} required />
                <div className="grid grid-cols-2 gap-4">
                  <div><label className="text-[9px] font-black text-slate-400 ml-2 uppercase">Aplicaci√≥n</label><input type="date" className={inputStyle} value={vacForm.fecha} onChange={e => setVacForm({...vacForm, fecha: e.target.value})} required /></div>
                  <div><label className="text-[9px] font-black text-slate-400 ml-2 uppercase">Pr√≥xima</label><input type="date" className={inputStyle} value={vacForm.proxima} onChange={e => setVacForm({...vacForm, proxima: e.target.value})} /></div>
                </div>
                <button className="w-full bg-purple-600 text-white p-4 rounded-2xl font-bold uppercase text-xs shadow-lg shadow-purple-900/20 active:scale-95 transition-all">Guardar</button>
              </form>
            </section>
            <div className="space-y-3">
               {vacunasHistorial.map(v => {
                 const hoy = new Date(); const proxima = v.proxima_dosis ? new Date(v.proxima_dosis) : null; if(proxima) proxima.setDate(proxima.getDate() + 1); const esAlerta = proxima && proxima < hoy;
                 return (
                  <div key={v.id} className={`bg-white p-5 rounded-[2rem] shadow-sm border flex justify-between items-center ${esAlerta ? 'border-rose-200 bg-rose-50' : 'border-slate-100'}`}>
                    <div className="flex-1">
                      <p className="text-[9px] font-black text-slate-400 uppercase tracking-wider">{v.animales?.nombre} ‚Ä¢ Aplicada: {new Date(v.fecha_aplicacion).toLocaleDateString()}</p>
                      <h4 className={`font-black text-sm mt-0.5 ${esAlerta ? 'text-rose-600' : 'text-slate-800'}`}>{v.nombre_vacuna}</h4>
                      {v.proxima_dosis && (
                        <p className={`text-[10px] font-bold mt-1 ${esAlerta ? 'text-rose-600 animate-pulse' : 'text-slate-500'}`}>{esAlerta ? '‚ö†Ô∏è VENCIDA: ' : 'Pr√≥xima: '} {new Date(v.proxima_dosis).toLocaleDateString()}</p>
                      )}
                    </div>
                    <div className="flex gap-2">
                      <button onClick={() => enviarTelegram(v)} className="bg-blue-50 text-blue-600 p-3 rounded-xl shadow-sm active:scale-90 transition-all text-xl">‚úàÔ∏è</button>
                      <button onClick={() => eliminarItem('vacunas', v.id)} className="p-3 text-slate-200 hover:text-rose-500">‚úï</button>
                    </div>
                  </div>
                 )
               })}
            </div>
          </div>
        )}

        {/* PESTA√ëA 5: FINANZAS */}
        {activeTab === 'finanzas' && (
          <div className="space-y-6 animate-in slide-in-from-right-4 duration-500">
            <section className={cardStyle}>
              <h2 className="text-[10px] font-black mb-6 text-amber-600 uppercase tracking-widest text-center flex justify-center gap-2">
                <span className="bg-amber-50 p-1 rounded-lg">üí∞</span> Caja Chica
              </h2>
              <form onSubmit={guardarFinanza} className="space-y-4">
                <div className="flex gap-2 p-1 bg-slate-100 rounded-2xl">
                  <button type="button" onClick={() => setFinForm({...finForm, tipo: 'gasto'})} className={`flex-1 p-3 rounded-xl font-bold text-[10px] transition-all shadow-sm ${finForm.tipo === 'gasto' ? 'bg-white text-rose-600' : 'text-slate-400 hover:text-slate-600'}`}>GASTO</button>
                  <button type="button" onClick={() => setFinForm({...finForm, tipo: 'ingreso'})} className={`flex-1 p-3 rounded-xl font-bold text-[10px] transition-all shadow-sm ${finForm.tipo === 'ingreso' ? 'bg-white text-emerald-600' : 'text-slate-400 hover:text-slate-600'}`}>INGRESO</button>
                </div>
                <div className="flex gap-2 p-1 bg-slate-100 rounded-2xl">
                  <button type="button" onClick={() => setFinForm({...finForm, moneda: 'VES'})} className={`flex-1 p-3 rounded-xl font-bold text-[10px] transition-all ${finForm.moneda === 'VES' ? 'bg-slate-800 text-white shadow-md' : 'text-slate-400'}`}>BS</button>
                  <button type="button" onClick={() => setFinForm({...finForm, moneda: 'USD'})} className={`flex-1 p-3 rounded-xl font-bold text-[10px] transition-all ${finForm.moneda === 'USD' ? 'bg-emerald-600 text-white shadow-md' : 'text-slate-400'}`}>USD</button>
                </div>
                <select className={inputStyle} value={finForm.categoria} onChange={e => setFinForm({...finForm, categoria: e.target.value})} required>
                  <option value="">Categor√≠a...</option>
                  {finForm.tipo === 'gasto' ? (<><option value="Nomina">N√≥mina</option><option value="Alimento">Alimento</option><option value="Medicina">Medicina</option><option value="Otros">Otros</option></>) : (<><option value="Venta Queso">Queso</option><option value="Venta Leche">Leche</option><option value="Venta Animal">Animal</option></>)}
                </select>
                <div className="grid grid-cols-2 gap-4">
                   <input placeholder={`Monto ${finForm.moneda}`} type="number" step="0.01" className={inputStyle} value={finForm.monto} onChange={e => setFinForm({...finForm, monto: e.target.value})} required />
                   <input placeholder="Nota" className={inputStyle} value={finForm.descripcion} onChange={e => setFinForm({...finForm, descripcion: e.target.value})} />
                </div>
                {finForm.moneda === 'USD' && <p className="text-center text-[10px] font-black text-emerald-600 bg-emerald-50 py-2 rounded-xl">Conversi√≥n: Bs {(parseFloat(finForm.monto || "0") * tasaBCV).toFixed(2)}</p>}
                <button className={`w-full p-4 rounded-2xl font-bold uppercase text-xs shadow-lg text-white transition-all active:scale-95 ${finForm.tipo === 'gasto' ? 'bg-rose-600 shadow-rose-900/20' : 'bg-emerald-600 shadow-emerald-900/20'}`}>Registrar Movimiento</button>
              </form>
            </section>
            <div className="space-y-3 pb-10">
               {finanzas.map(f => (
                  <div key={f.id} className="bg-white p-5 rounded-[2rem] shadow-sm border border-slate-100 flex justify-between items-center">
                    <div className="flex-1">
                      <p className="text-[9px] font-black text-slate-400 uppercase">{new Date(f.fecha).toLocaleDateString()}</p>
                      <h4 className="font-bold text-slate-800 text-sm">{f.descripcion || f.categoria}</h4>
                    </div>
                    <div className="flex items-center gap-3">
                      <p className={`font-black text-lg ${f.tipo === 'ingreso' ? 'text-emerald-600' : 'text-rose-600'}`}>{f.tipo === 'ingreso' ? '+' : '-'}{f.monto.toLocaleString('es-VE', {maximumFractionDigits:0})}</p>
                      <button onClick={() => eliminarItem('contabilidad', f.id)} className="text-slate-300 hover:text-rose-500 font-bold p-1">‚úï</button>
                    </div>
                  </div>
               ))}
            </div>
          </div>
        )}
      </div>

      {/* DOCK NAVEGACI√ìN */}
      <nav className="fixed bottom-6 left-6 right-6 bg-[#1B4332]/95 backdrop-blur-xl border border-white/20 p-4 flex justify-around items-center z-30 shadow-2xl shadow-green-900/40 rounded-[2.5rem]">
        <NavBtn icon="üìä" active={activeTab === 'inicio'} onClick={() => setActiveTab('inicio')} />
        <NavBtn icon="üêÉ" active={activeTab === 'animales'} onClick={() => setActiveTab('animales')} />
        <NavBtn icon="ü•õ" active={activeTab === 'produccion'} onClick={() => setActiveTab('produccion')} />
        <NavBtn icon="üíâ" active={activeTab === 'salud'} onClick={() => setActiveTab('salud')} />
        <NavBtn icon="üí∞" active={activeTab === 'finanzas'} onClick={() => setActiveTab('finanzas')} />
      </nav>
    </main>
  )
}

function NavBtn({ icon, active, onClick }: any) {
  return (
    <button onClick={onClick} className={`flex flex-col items-center gap-1 transition-all duration-300 ${active ? 'scale-125 -translate-y-1' : 'opacity-40 grayscale scale-100'}`}>
      <span className="text-2xl filter drop-shadow-md">{icon}</span>
      {active && <div className="w-1 h-1 bg-green-400 rounded-full shadow-[0_0_10px_#4ade80]"></div>}
    </button>
  )
}